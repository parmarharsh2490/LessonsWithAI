{
  "name": "LessonsWithAI",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:LessonsWithAI": "node dist/LessonsWithAI/server/server.mjs",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss,js,json,md}\"",
    "prepare": "husky",
    "lint": "ng lint"
  },
  "lint-staged": {
    "*.{ts,html,css,scss,js,json,md}": "prettier --write"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.14",
    "@angular/compiler": "^20.3.14",
    "@angular/core": "^20.3.14",
    "@angular/forms": "^20.3.14",
    "@angular/platform-browser": "^20.3.14",
    "@angular/platform-server": "^20.3.14",
    "@angular/router": "^20.3.14",
    "@angular/ssr": "^20.3.12",
    "@primeuix/themes": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@vapi-ai/web": "^2.3.9",
    "express": "^5.1.0",
    "keycloak-angular": "^20.0.0",
    "postcss": "^8.5.6",
    "primeicons": "^7.0.0",
    "primeng": "^20.0.1",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.17",
    "tslib": "^2.3.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.12",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.14",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "angular-eslint": "20.2.0",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.40.0"
  }
}
